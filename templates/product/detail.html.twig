{% extends 'base.html.twig' %}
{% block body %}
{# {% if productsid != null %} #}

<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>
<ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    <li><a href="{{ path('products_view_all') }}" class="nav-link px-2 link-secondary">Home</a></li>
    <li><a href="{{ path('category_view_all') }}" class="nav-link px-2 link-dark">Category</a></li>
    <li><a href="{{ path('set_view_all') }}" class="nav-link px-2 link-dark">Set</a></li>
    <li><a href="{{ path('view_cart') }}" class="nav-link px-2 link-dark">Cart</a></li>
    <li><a href="{{ path('view_bill') }}" class="nav-link px-2 link-dark">Bill</a></li>
</ul>
<div class="col-md-3 text-end">
    <a href="{{ path('app_logout') }}" class="btn btn-outline-primary me-2">Logout</a>
</div>
</header>
<table class="table table-responsive-md mt-3">
<thead>
<tr>
    <td>Product ID</td>
    <td>Product Name</td>
    <td>Product Price</td>
    <td>Product Quantity</td>
    <td>Product Image</td>
    <td>Set</td>
    <td>Category</td>
    <td>Product Description</td>
    <td>Actions</td>
</tr>
</thead>
<tbody>
<tr>
    <td>{{ productsid.id }}</td>
    <td>{{ productsid.name }}</td>
    <td>{{ productsid.price }}</td>
    <td>{{ productsid.quantity }}</td>
    <td><img src="{{ asset('images/'~productsid.image) }}" width="100" height="120"></td>
    <td></td>
    <td></td>
    <td>{{ productsid.description }}</td>
    <td>
        {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('products_delete', {'id': productsid.id }) }}" class="btn btn-danger" onclick="return confirm('do you want to delete this product?')">Delete</a>
        <a href="{{ path('products_edit', {'id': productsid.id }) }}" class="btn btn-warning">Edit</a>
        {% endif %}
        {% if is_granted("ROLE_USER") %}
        <a href="{{ path('cart_add', {'id': productsid.id }) }}" class="btn btn-primary">Add To Cart</a>
        {% endif %}
    </td>
</tr>
</tbody>
</table>
{# {% else %} 
<h3>Product not exist</h3>
{% endif %}
#}
{% endblock %}