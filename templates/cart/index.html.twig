{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>
<ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    <li><a href="{{ path('products_view_all') }}" class="nav-link px-2 link-secondary">Home</a></li>
    <li><a href="{{ path('category_view_all') }}" class="nav-link px-2 link-dark">Category</a></li>
    <li><a href="{{ path('set_view_all') }}" class="nav-link px-2 link-dark">Set</a></li>
    <li><a href="{{ path('view_cart') }}" class="nav-link px-2 link-dark">Cart</a></li>
    <li><a href="{{ path('view_bill') }}" class="nav-link px-2 link-dark">Bill</a></li>
</ul>
<div class="col-md-3 text-end">
    <a href="{{ path('app_logout') }}" class="btn btn-outline-primary me-2">Logout</a>
</div>
</header>

<table class="table table-bordered">
    <tr>
        <th>Cart ID</th>
        <th>Username</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    {% for cart in cart %}
    {% if cart.email == app.user.username %}
    <tr>
        <td>{{ cart.id }}</td>
        <td>{{ cart.email }}</td>
        <td> {{ cart.productname }} </td>
        <td>1</td>
        <td> {{ cart.price }} </td>
        <td>
            <a href="{{ path('cart_delete', {'id': cart.id }) }}" class="btn btn-danger" onclick="return confirm('do you want to delete this Cart?')">Delete</a>
            <a href="{{ path('add_to_bill', {'id': cart.id }) }}" class="btn btn-success">Add To Bill</a>
        </td>
        
    </tr>
    {% endif %}
    {% endfor %}
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
        </td>
        <td>
            <a href="{{ path('view_bill') }}" class="btn btn-info">Make Bill</a>
        </td>
    </tr>
</table>
{% endblock %}
